<Window x:Class="WpfTestBox.Views.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestBox.Views"
        mc:Ignorable="d"
        Title="Resource dictionary window" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfTestBox;component/ResourceDictionaries/ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TextBlock Text="This is the fourth window." HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Example label with Material Design styles -->
        <Label Content="Material Design Label" VerticalAlignment="Top" Margin="10" />

        <!-- Example button with Material Design styles -->
        <Button Content="Material Design Button" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
